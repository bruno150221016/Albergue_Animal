@{
    ViewData["Title"] = "Home Page";
}


<html>
<head>
    <style type="text/css">

        button {
            font-family: Tahoma, Serif, Arial, Helvetica, sans-serif;
            background-color: #F5D0A9;
            border: none;
            border: 2px solid #CD9B9B;
            border-radius: 16px;
            box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            color: white;
            padding: 20px 40px;
            text-align: center;
            font-size: 16px;
            margin: 4px 2px;
            opacity: 0.7;
            transition: 0.3s;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
            opacity: 1;
        }
    </style>
    <style>
        img {
            border-radius: 16px;
        }
    </style>
</head>

<body>
    <header>
        <br>
        <ul id="button1">
            <center>
                <button size="10px">
                    <font face="Tahoma, serif" size="6" color=white>
                        <br>Albergue de Animais<br><br>
                        <img src="~/images/caes.jpg" alt="Imagem de cães" sizes="2px" />
                    </font>
                </button>
            </center>
        </ul>
    </header>
</body>
</html>
